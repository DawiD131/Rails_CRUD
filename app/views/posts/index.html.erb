<h3 class="subtitle is-3">Lista wpisów</h3>
<p><%= link_to "Dodaj nowy wpis", new_post_path, class: "button is-primary" %></p>
<table class="table">
 <thead>
  <tr>
     <th>Tytuł</th>
     <th>Autor</th>
     <th>Opublikowany</th>
     <th>Treść</th>
     <th>Akcje</th>
  </tr>
 </thead>
 <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.author%></td>
      <td><%= post.published%></td>
      <td><%= post.body%></td>
      <td>
        <%= link_to "Pokaz", post_path(post), class: "button is-small is-success"%>
        <%= link_to "Edytuj", edit_post_path(post), class: "button is-small is-warning"%>
        <%= link_to "Usuń", post_path(post),method: :delete, class: "button is-small is-danger", data: {confirm: "Czy na pewno chcesz usunąć?"}%>
      </td>
    </tr>
  <%end%>
 </tbody>
</table>